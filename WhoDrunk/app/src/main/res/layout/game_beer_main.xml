<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_drunk_bg"
    tools:context="com.small.game.whodrunk.MainActivity">

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/iv_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/iv_back" />

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/game_menu" />

    <com.small.game.whodrunk.WineGlass
        android:padding="10dp"
        android:id="@+id/glass"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        app:count="8" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:src="@drawable/game_beer" />

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/black" />

    <ImageView
        android:padding="30dp"
        android:id="@+id/iv_introduce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_drunk_introduce" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_ignore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@+id/view"
        android:text="不再提示"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
